<%= form_for @store, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :store_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :merchant_account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :merchant_account_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_loc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_loc, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stores_path, :class => 'btn' %>
  </div>
<% end %>
